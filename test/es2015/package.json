{
  "name": "rxt-backend-base-test",
  "version": "0.1.0",
  "description": "es2015 unit tests",
  "license": "MIT",
  "scripts": {
    "prebuild:base-type": "rxtender --serialization rxt_backend_base.es2015.serialization.json --input base_type/rxt/base_type.rxt > base_type/rxt/base_type.rxt.es6.js",
    "build:base-type": "babel --presets es2015 base_type/rxt/base_type.rxt.es6.js --out-file base_type/rxt/base_type.rxt.js",
    "test:base-type": "npm run build:base-type && mocha --compilers js:babel-core/register base_type/",

    "prebuild:base_stream": "rxtender --serialization rxt_backend_base.es2015.serialization.json --stream rxt_backend_base.es2015.stream --stream rxt_backend_base.es2015_rxjs.stream --input stream/base_stream.rxt > stream/base_stream_rxt.es6.js",
    "build:base_stream": "babel --presets es2015 stream/base_stream_rxt.es6.js --out-file stream/base_stream_rxt.js",
    "prebuild:arg_stream": "rxtender --serialization rxt_backend_base.es2015.serialization.json --stream rxt_backend_base.es2015.stream --stream rxt_backend_base.es2015_rxjs.stream --input stream/arg_stream.rxt > stream/arg_stream_rxt.es6.js",
    "build:arg_stream": "babel --presets es2015 stream/arg_stream_rxt.es6.js --out-file stream/arg_stream_rxt.js",
    "test:stream": "npm run build:base_stream && npm run build:arg_stream &&mocha --compilers js:babel-core/register stream/",

    "prebuild:framing": "rxtender --framing rxt_backend_base.es2015.framing.newline --input framing/dummy_type.rxt > framing/dummy_type_rxt.es6.js",
    "build:framing": "babel --presets es2015 framing/dummy_type_rxt.es6.js --out-file framing/dummy_type_rxt.js",
    "test:framing": "npm run build:framing && mocha --compilers js:babel-core/register framing/",

    "test": "npm run test:base-type && npm run test:stream && npm run test:framing"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-preset-es2015": "^6.24.1",
    "mocha": "^3.5.0",
    "rxjs": "^5.4.3"
  }
}
